@model IEnumerable<nahamaleo.Models.PropertyModel>
<div class="row">
    <div class="span4 select_height">
        Showing 1 - 10 of @Model.Count() results</div>
    <div class="pull-right">
        Sort by :
        <select id="sort" name="sort" class="span2">
            <option value="pmrank">Popularity</option>
            <option value="price">Price: Low to High</option>
            <option value="-price">Price: High to Low</option>
        </select>
    </div>
</div>
@foreach (var item in Model)
{
    
    <div class="row premium">
        <div class="span2">
            <a href="@Url.Action("property", "Home")">
                @if (item.image != null)
                {
                    <div class="thumbnail">
                        <img alt="images" src="@Url.Content(item.image)" />
                    </div>
                }
            </a>
            <h5>
                Kshs. @Html.DisplayFor(modelItem => item.property_cost) p/m</h5>
            <h6>
                Bedrooms: @Html.DisplayFor(modelItem => item.no_of_rooms)</h6>
            <h6>
                Days on site: 4</h6>
            <h6>
                Sqft: 2,325</h6>
        </div>
        <div class="span6">
            <a href="@Url.Action("property", "Home")">
                <h3>
                    @Html.DisplayFor(modelItem => item.no_of_rooms) bedroom
                    @Html.DisplayFor(modelItem => item.property_type) for
                    @Html.DisplayFor(modelItem => item.rent_or_buy)
                    @Html.DisplayFor(modelItem => item.property_location)
                </h3>
            </a>
            <p>
                One of the finest and most elegant houses in South West London - This exceptional
                example of William and Mary architecture positioned centrally in Richmond has been
                extended at various times over the last 300 years and now provides the perfect cohesion
                of traditional and contemporary design.
            </p>
            <p>
                <a href="#">More details, 14 photos, floorplan and brochure</a> | <a href="#">Save property</a>
                | <a href="#">Contact agent</a> | <a href="#">Upgrade listing</a>
            </p>
            <p>
                Marketed by Knight Frank, Richmond. Telephone: 0843 314 8224 <a href="#">BT 4p/min</a>
            </p>
        </div>
    </div>
    <hr />
}