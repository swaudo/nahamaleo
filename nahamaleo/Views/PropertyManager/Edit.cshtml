@model nahamaleo.Models.PropertyModel
@{
    ViewBag.Title = "Edit";
}
<h2>
    Edit</h2>
@using (Html.BeginForm("Edit", "PropertyManager",
FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>PropertyModel</legend>
        @Html.HiddenFor(model => model.Id)
        <div class="editor-label">
            @Html.LabelFor(model => model.property_location)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.property_location)
            @Html.ValidationMessageFor(model => model.property_location)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.property_type)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.property_type)
            @Html.ValidationMessageFor(model => model.property_type)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.no_of_rooms)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.no_of_rooms)
            @Html.ValidationMessageFor(model => model.no_of_rooms)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.rent_or_buy)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.rent_or_buy)
            @Html.ValidationMessageFor(model => model.rent_or_buy)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.property_cost)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.property_cost)
            @Html.ValidationMessageFor(model => model.property_cost)
        </div>
        <div class="editor-field">
            @if (Model.image != null)
            {
                <div class="thumbnail">
                    <img alt="images" src="@Url.Content(Model.image)" />
                </div>
            }
            @Html.TextBoxFor(model => model.image, new { type = "file", accept = ".jpg", multiple = "multiple" })
            @Html.ValidationMessageFor(model => model.image)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
